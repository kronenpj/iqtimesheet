<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.googlecode.iqapps.IQTimeSheet"
    android:installLocation="auto"
    android:versionCode="18"
    android:versionName="2016.beta2">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!--<uses-sdk-->
    <!--android:minSdkVersion="8"-->
    <!--android:targetSdkVersion="18" />-->

    <application
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:icon="@drawable/icon_medium"
        android:label="@string/app_name"
        tools:ignore="GoogleAppIndexingWarning"
		android:fullBackupContent="@xml/backup_descriptor">
        <activity
            android:name=".TimeSheetActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
	<activity android:name=".AboutDialog" android:theme="@style/Theme.AppCompat"/>
	<activity android:name=".AddTaskHandler" android:theme="@style/Theme.AppCompat"/>
	<activity android:name=".ChangeDate" android:theme="@style/Theme.AppCompat"/>
	<activity android:name=".ChangeEntryHandler" android:theme="@style/Theme.AppCompat"/>
	<activity android:name=".ChangeTaskList" android:theme="@style/Theme.AppCompat"/>
	<activity android:name=".ChangeTime" android:theme="@style/Theme.AppCompat"/>
	<activity android:name=".EditDayEntriesHandler" android:theme="@style/Theme.AppCompat"/>
	<activity android:name=".EditTaskHandler" android:theme="@style/Theme.AppCompat"/>
	<activity android:name=".MyPreferenceActivity" android:theme="@style/Theme.AppCompat"/>
	<activity android:name=".ReviveTaskFragment" android:theme="@style/Theme.AppCompat"/>
    </application>
</manifest>
