<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="@+id/fragment_reportlist"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout="@layout/fragment_reportlist"
    android:orientation="vertical"
    android:paddingBottom="0dip"
    android:paddingLeft="0dip"
    android:paddingRight="0dip"
    android:paddingTop="0dip"
    android:tag="DayReport"
    tools:context=".TaskListFragment">

    <TextView
        android:id="@+id/reportheader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

    <ListView
        android:id="@+id/reportList"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include
        layout="@layout/reportfooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        layout="@layout/daybuttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>